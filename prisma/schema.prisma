datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins", "fullTextSearchPostgres"]
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String       @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  password      String?
  posts         Post[]
  comments      Comment[]
  savedPosts    SavedPost[]
  likedByUser   Like[]
  messages      Message[]
  friends       Friend[]
  friendLists   FriendList[]
  rooms         Room[]

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  Authenticator Authenticator[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([userId, credentialID])
}

model Post {
  id          String      @unique @default(cuid())
  description String?
  images      PostImage[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  userId      String
  comments    Comment[]
  likes       Like[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Like {
  id     String @unique @default(cuid())
  userId String
  postId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  post Post @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([id])
}

model PostImage {
  id        String @unique @default(cuid())
  post      Post?  @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  postId    String
  thumbnail String
}

model SavedPost {
  postId String
  userId String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([postId, userId])
}

model Comment {
  id          String   @unique @default(cuid())
  description String
  postId      String
  authorId    String
  createdAt   DateTime @default(now())

  author User @relation(fields: [authorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Room {
  id       String    @unique @default(cuid())
  userId   String
  messages Message[]

  user User @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
}

model Message {
  id       String   @default(cuid())
  message  String
  senderId String
  sent_at  DateTime
  roomId   String

  sender User @relation(fields: [senderId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  room   Room @relation(fields: [roomId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@id([id])
}

model Friend {
  id           String @unique @default(cuid())
  friendListId String
  userFriendId String

  friendlist FriendList @relation(fields: [friendListId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  friendData User       @relation(fields: [userFriendId], references: [id], onUpdate: Cascade, onDelete: Cascade)
}

model FriendList {
  id      String   @unique @default(cuid())
  userId  String
  friends Friend[]

  user User @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
}
